#!/usr/bin/env bash
# Script automates the installation and configuration of an nginx web server

# Update package lists
sudo apt-get update  -y

# Install nginx package with '-y' option to automatically answer 'yes' to prompts
sudo apt-get install -y nginx

# Configure Nginx to listen on port 80
#ufw allow 'Nginx HTTP'
sudo sed -i 's/80 default_server/80/' /etc/nginx/sites-available/default

# Restart Nginx
sudo service nginx restart

# Create an HTML file with the desired content
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null
